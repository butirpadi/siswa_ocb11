<odoo>
    <data>
        <record id="siswa_ocb11.wizard_non_aktif_form" model="ir.ui.view">
            <field name="name">wizard.ocb11.nonaktifkann.siswa</field>
            <field name="model">siswa_ocb11.non_aktif</field>
            <field name="arch" type="xml">
                <form string="Non Atifkan Siswa" class="o_sale_order" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="tahunajaran_id" options="{'no_create_edit': True,'no_open':True}"/>
                                <field name="siswa_id" options="{'no_create_edit': True,'no_open':True}" />                    
                                <field name="rombel_asal_id" options="{'no_create_edit': True,'no_open':True}" />
                            </group>
                            <group>
                                <field name="tanggal" />
                                <field name="non_aktif_selection" />
                                <field name="keterangan"  />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="siswa_ocb11.wizard_non_aktif_action"
            name="Non Aktifkan Siswa"
            src_model="res.partner"
            res_model="siswa_ocb11.non_aktif"
            view_mode="form"
            target="new"
            key2="client_action_multi"/>
    </data>
</odoo>